    @page
@model WebTool.Pages.Server.IndexModel
@{
    ViewData["Title"] = "서버";
    ViewData["ActiveMenu"] = "/Server/Index";
}

<div class="row mb-2">
    <div class="content-header">
        <h1 class="text-dark">서버</h1>
    </div>
</div>
<div class="row">
    @foreach (var item in Model.ServerInfos)
    {
        <div class="col-lg-4 col-sm-6 col-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">(@item.AppId) @item.AppName</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                </div>
            </div>
        </div>
    }
</div>

@section Styles
{
    <style>
        .info-box-content span { white-space: normal !important; }
    </style>
}