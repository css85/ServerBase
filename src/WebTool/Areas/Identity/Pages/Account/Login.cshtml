@page
@model LoginModel
@{
    Layout = "_LayoutEmpty";
    ViewData["Title"] = "GM-Tool Login";
}

<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a>Eves GMTool</a>
        </div>
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">로그인이 필요합니다.</p>

                <form id="account" method="post">
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    <div class="input-group mb-3" style="background-color: beige">
                        <input asp-for="Input.Email" class="form-control" value="test@test.com" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    <div class="input-group mb-3" style="background-color: beige">
                        <input asp-for="Input.Password" class="form-control" value="123456" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input asp-for="Input.RememberMe" type="checkbox" id="remember">
                                <label for="remember">
                                    계정 기억하기
                                </label>
                            </div>
                        </div>
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block" style="background-color:coral">로그인</button>
                        </div>
                    </div>
                    <div asp-validation-summary="All" class="text-danger small"></div>
                </form>
                <a asp-area="Identity" asp-page="/Account/Register" class="text-center">계정이 없습니다.</a>
            </div>
        </div>
    </div>
    <partial name="_Scripts" />
    <partial name="_ValidationScriptsPartial" />
</body>
