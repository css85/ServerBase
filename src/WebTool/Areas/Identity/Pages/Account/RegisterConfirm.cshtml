@page
@model RegisterConfirmModel
@{
    Layout = "_LayoutEmpty";
    ViewData["Title"] = "가입 확인";
}

<body class="hold-transition login-page">
<div class="login-box">
    <div class="login-logo">
    </div>
    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg">관리자의 승인을 기다려주세요.</p>
            <a asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-center">이미 계정이 있습니다.</a>
        </div>
    </div>
</div>
</body>
